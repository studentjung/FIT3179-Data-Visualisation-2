{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "background": "#f8f8f8",
    "title": "Population change in selected suburbs (2023 vs 2024)",
    "data": {
        "url": "data/pop_vic_2023-24.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "fold": ["2023", "2024"],
            "as": ["year", "population"]
        },
        {
            "filter": "datum['2023-24'] > 500 && (datum.sa3_name == 'Wyndham' || datum.sa3_name == 'Melton - Bacchus Marsh' || datum.sa4_name == 'Melbourne - North East' || datum.sa4_name == 'Melbourne - North West')"
        }
    ],
    "encoding": {
        "x": {
            "field": "population",
            "type": "quantitative",
            "title": "Population (2023 vs 2024)"
        },
        "y": {
            "field": "suburb_name",
            "type": "nominal",
            "title": "Suburb",
            "sort": {
                "op": "average",
                "field": "2023-24",
                "order": "descending"
            }
        }
    },
    "layer": [
        {
            "mark": {"type": "rule", "strokeWidth": 2},
            "encoding": {
                "x": {"aggregate": "min", "field": "population"},
                "x2": {"aggregate": "max", "field": "population"},
                "y": {"field": "suburb_name"}
            }
        },
        {
            "mark": {"type": "point", "filled": true, "size": 100},
            "encoding": {
                "x": {
                    "field": "population"
                },
                "y": {"field": "suburb_name"},
                "color": {
                    "field": "year",
                    "type": "nominal",
                    "title": "Year"
                },
                "tooltip": [
                    {"field": "suburb_name", "type": "nominal", "title": "Suburb"},
                    {"field": "year", "type": "nominal", "title": "Year"},
                    {"field": "population", "type": "quantitative", "title": "Population", "format": ","}
                ]
            }
        }
    ]
}