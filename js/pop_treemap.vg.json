{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "autosize": {
    "type": "fit"
  },
  "width": 0,
  "height": 500,
  "padding": 5,
  "title": "Population in Melbourne Suburbs (2024)",
  "background": "#303030",
  "config": {
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "titleFontSize": 14,
      "labelFontSize": 13
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "titleFontSize": 14,
      "labelFontSize": 13
    },
    "title": {
      "color": "white",
      "font": "Open Sans",
      "fontSize": 16
    }
  },
  "data": [
    {
      "name": "population",
      "url": "data/pop_vic_2023-24.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.sa3_name == 'Hobsons Bay' || datum.sa3_name == 'Melbourne City' || datum.sa3_name == 'Melton - Bacchus Marsh' || datum.sa3_name == 'Monash' || datum.sa3_name == 'Sunbury' || datum.sa3_name == 'Tullamarine - Broadmeadows'  || datum.sa3_name == 'Whittlesea - Wallan' || datum.sa3_name == 'Wyndham'"
        }
      ]
    },
    {
      "name": "hierarchy",
      "source": "population",
      "transform": [
        {
          "type": "nest",
          "keys": ["sa3_name", "suburb_name"]
        },
        {
          "type": "treemap",
          "field": "2024",
          "sort": { "field": "value", "order": "descending" },
          "round": true,
          "method": "squarify",
          "padding": 2,
          "size": [{ "signal": "width" }, { "signal": "height" }]
        }
      ]
    },
    {
      "name": "sa3_labels",
      "source": "hierarchy",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["sa3_name"],
          "fields": ["x0", "x1", "y0", "y1"],
          "ops": ["min", "max", "min", "max"],
          "as": ["x0_min", "x1_max", "y0_min", "y1_max"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "hierarchy", "field": "sa3_name" },
      "range": { "scheme": "tableau10" }
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": { "data": "hierarchy" },
      "encode": {
        "enter": {
          "x": { "field": "x0" },
          "y": { "field": "y0" },
          "x2": { "field": "x1" },
          "y2": { "field": "y1" },
          "fill": { "scale": "color", "field": "sa3_name" },
          "stroke": { "value": "white" },
          "tooltip": {
            "signal": "{'Area': datum.suburb_name || datum.sa3_name || datum.sa4_name, 'Population': format(datum['2024'], ','), 'Region': datum.sa3_name}"
          }
        }
      }
    },
    {
      "name": "labels",
      "type": "text",
      "from": { "data": "sa3_labels" },
      "encode": {
        "enter": {
          "x": { "signal": "(datum.x0_min + datum.x1_max)/2" },
          "y": {
            "signal": "datum.sa3_name == 'Monash' ? (datum.y0_min + datum.y1_max)/2 - 30 : (datum.y0_min + datum.y1_max)/2"
          },
          "text": { "field": "sa3_name" },
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fill": { "value": "white" },
          "fontSize": { "value": 15 },
          "font": { "value": "Open Sans" },
          "fontWeight": { "value": "bolder" }
        }
      }
    }
  ]
}
