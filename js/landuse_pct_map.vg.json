{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 700,
  "height": 700,
  "background": "#f8f8f8",
  "projection": {
    "type": "azimuthalEqualArea",
    "rotate": [215, 0, 0]
  },
  "data": {
    "url": "data/suburb_landuse.topojson",
    "format": {
      "type": "topojson",
      "feature": "sa2_landuse_summary"
    }
  },
  "transform": [
    {
      "calculate": "datum.properties[land_use_class] != null ? datum.properties[land_use_class] : 0",
      "as": "selected_value"
    },
    {
      "calculate": "datum.selected_value / 100 * datum.properties.areasqkm21",
      "as": "selected_value_abs"
    }
  ],
  "title": "Percentage of residential land area per suburb",
  "params": [
    {
      "name": "land_use_class",
      "value": "developable_area_residential_pct",
      "bind": {
        "input": "select",
        "options": [
          "transport_pct",
          "credited_open_space_pct",
          "uncredited_open_space_pct",
          "developable_area_residential_pct",
          "education_community_government_pct",
          "developable_area_employment_pct",
          "regional_open_space_pct",
          "other_non_developable_land_pct"
        ],
        "labels": [
          "Transport",
          "Credited Open Space",
          "Uncredited Open Space",
          "Residential",
          "Education/Community/Government",
          "Industrial/Commercial",
          "Regional Open Space",
          "Non-Developable"
        ],
        "name": "Land Use Type: "
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "stroke": {
          "condition": {
            "test": "datum.selected_value > 1",
            "value": "black"
          },
          "value": "#555"
        },
        "color": {
          "field": "selected_value", 
          "type": "quantitative", 
          "title": "Residential (%)", 
          "scale": {"scheme": "blues"},
          "legend": {
            "title": "Residential %",
            "format": ".0f",
            "titleFontSize": 14,
            "labelFontSize": 12
        }},
        "tooltip": [
          {"field": "properties.sa2_name21", "type": "nominal", "title": "Suburb"},
          {"field": "properties.areasqkm21", "type": "quantitative", "title": "Suburb Total Area (km²)", "format": ".2f"},
          {"field": "selected_value_abs", "type": "quantitative", "title": "Selected Land Use (km²)", "format": ".2f"},
          {"field": "selected_value", "type": "quantitative", "title": "Selected Land Use (%)", "format": ".0f"}
        ]
      }
    },
    {
      "mark": {"type": "text", "fontSize": 16, "fontWeight": "bold"},
      "encoding": {
        "text": { "field": "properties.sa2_name21"},
        "longitude": { "field": "properties.long" },
        "latitude": { "field": "properties.lat" },
        "stroke": { 
          "condition": {
            "test": "luminance(scale('color', datum.selected_value)) < 0.3",
            "value": "black"
          },
          "value": "white"
        },
        "strokeWidth": { "value": 0.5 },
        "size": {
          "condition": {
            "test": "datum.properties.sa2_name21 != 'Melbourne CBD - East'",
            "value": 16
          },
          "value": 20
        },
        "color": { 
          "condition": {
            "test": "luminance(scale('color', datum.selected_value)) < 0.3",
            "value": "white"
          },
          "value": "black"
        }
      },
      "transform": [
        {
          "filter": "datum.properties.sa2_name21 == 'Melbourne CBD - East' || datum.properties.sa2_name21 == 'Rockbank - Mount Cottrell' || luminance(scale('color', datum.selected_value)) < 0.3 || datum.properties.sa2_name21 == 'Sunshine' || datum.properties.sa2_name21 == 'Broadmeadows' || datum.properties.sa2_name21 == 'Werribee - South' || datum.properties.sa2_name21 == 'Epping - South' || datum.properties.sa2_name21 == 'Sunbury' || datum.properties.sa2_name21 == 'Melton West'"
        }
      ]
    }
  ]
}